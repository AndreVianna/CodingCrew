{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach",
            "type": "debugpy",
            "request": "attach",
            "processId": "${command:pickProcess}",
        },
        {
            "name": "Run",
            "type": "debugpy",
            "request": "launch",
            "program": "src/main.py",
            "console": "integratedTerminal",
        },
        {
            "name": "Sandbox",
            "type": "debugpy",
            "request": "launch",
            "program": "src/main.py",
            "console": "integratedTerminal",
            "args": "-s" ,
        },
        {
            "pythonArgs": ["-X", "dev", "-v"],
            "name": "Verbose (Debug)",
            "type": "debugpy",
            "request": "launch",
            "program": "src/main.py",
            "console": "externalTerminal",
            "sudo": true,
            "subProcess": true,
            "autoReload": {
              "enable": true
            },
            "args": "-v",
        },
        {
            "name": "Graph",
            "type": "debugpy",
            "request": "launch",
            "program": "src/main.py",
            "console": "integratedTerminal",
            "args": "-g",
        },
        {
            "pythonArgs": ["-X", "dev", "-v", "-u"],
            "name": "Text Input",
            "type": "debugpy",
            "request": "launch",
            "program": "src/main.py",
            "console": "integratedTerminal",
            "args": "-t",
        },
        {
            "pythonArgs": ["-u"],
            "name": "Key Test",
            "type": "debugpy",
            "request": "launch",
            "program": "src/main.py",
            "console": "integratedTerminal",
            "args": "-k",
        },
    ]
}